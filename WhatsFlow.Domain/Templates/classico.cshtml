@model CVPdfBot.Domain.Entities.ConversationState

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Currículo - Clássico</title>
    <style>
        body {
            font-family: 'Times New Roman', serif;
            font-size: 14px;
            margin: 40px;
        }

        h1 {
            font-size: 24px;
            border-bottom: 2px solid black;
            padding-bottom: 5px;
        }

        h2 {
            font-size: 18px;
            margin-top: 20px;
        }

        p {
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <h1>@Model.FullName</h1>
    <p><strong>Posição:</strong> @Model.ProfessionalObjective</p>
    <p><strong>Telefone:</strong> @Model.Phone</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Endereço:</strong> @Model.Address, @Model.City – @Model.State</p>

    <h2>Experiência Profissional</h2>
    @foreach (var exp in Model.WorkExperiences)
    {
        <p><strong>@exp.Company</strong> - @exp.Period<br/>
        <em>@exp.Role</em> - @exp.City/@exp.State</p>
    }

    <h2>Educação</h2>
    <p>@Model.EducationLevel - @Model.GraduationYear</p>

    <h2>Habilidades</h2>
    <ul>
    @foreach (var skill in Model.Skills)
    {
        <li>@skill</li>
    }
    </ul>

    <h2>Idiomas / Informações Adicionais</h2>
    <ul>
    @foreach (var info in Model.AdditionalInfo)
    {
        <li>@info</li>
    }
    </ul>
</body>
</html>