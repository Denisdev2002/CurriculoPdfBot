@model CVPdfBot.Domain.Entities.ConversationState
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            color: #333;
        }

        h1 {
            color: #0066cc;
        }

        h2 {
            color: #444;
            margin-top: 30px;
        }

        p, ul {
            line-height: 1.6;
        }
    </style>
</head>
<body>
    <h1>@Model.FullName</h1>
    <p>@Model.Nationality, @Model.MaritalStatus, @Model.Age anos, Nascido em @Model.DateOfBirth?.ToString("dd/MM/yyyy")</p>
    <p>@Model.Address<br />@Model.City – @Model.State</p>
    <p>Telefone: @Model.Phone / E-mail: @Model.Email</p>

    <h2>Objetivo Profissional</h2>
    <p>@Model.ProfessionalObjective</p>

    <h2>Formação</h2>
    <p>@Model.EducationLevel - Concluído em @Model.GraduationYear</p>

    <h2>Experiência Profissional</h2>
    @foreach (var exp in Model.WorkExperiences)
    {
    <p>
        <strong>@exp.Company</strong> - @exp.Period - @exp.City / @exp.State<br />
        <em>@exp.Role</em><br />
        @string.Join(", ", exp.Responsibilities)
    </p>
    }

    <h2>Habilidades</h2>
    <ul>
        @foreach (var skill in Model.Skills)
        {
        <li>@skill</li>
        }
    </ul>

    <h2>Informações Adicionais</h2>
    <ul>
        @foreach (var info in Model.AdditionalInfo)
        {
        <li>@info</li>
        }
    </ul>
</body>
</html>