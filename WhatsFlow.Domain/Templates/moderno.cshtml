@model CVPdfBot.Domain.Entities.ConversationState

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Currículo - Moderno</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 40px;
            color: #333;
        }

        .left-panel {
            width: 30%;
            float: left;
            background-color: #222;
            color: white;
            padding: 20px;
            height: 100%;
        }

        .right-panel {
            width: 65%;
            float: right;
            padding: 20px;
        }

        .section-title {
            color: #0066cc;
            font-size: 18px;
            margin-top: 20px;
        }

        .info-line {
            margin: 8px 0;
        }
    </style>
</head>
<body>
    <div class="left-panel">
        <h2>Sobre Mim</h2>
        <p>@Model.ProfessionalObjective</p>

        <h2>Habilidades</h2>
        <ul>
        @foreach (var skill in Model.Skills)
        {
            <li>@skill</li>
        }
        </ul>
    </div>

    <div class="right-panel">
        <h1>@Model.FullName</h1>
        <p class="info-line"><strong>Telefone:</strong> @Model.Phone</p>
        <p class="info-line"><strong>Email:</strong> @Model.Email</p>
        <p class="info-line"><strong>Endereço:</strong> @Model.Address, @Model.City – @Model.State</p>

        <h2 class="section-title">Experiência Profissional</h2>
        @foreach (var exp in Model.WorkExperiences)
        {
            <p>
                <strong>@exp.Company</strong> — @exp.Period<br/>
                @exp.City / @exp.State<br/>
                <em>@exp.Role</em>
            </p>
        }

        <h2 class="section-title">Formação Acadêmica</h2>
        <p>@Model.EducationLevel - @Model.GraduationYear</p>

        <h2 class="section-title">Informações Adicionais</h2>
        <p>@string.Join(", ", Model.AdditionalInfo)</p>
    </div>
</body>
</html>